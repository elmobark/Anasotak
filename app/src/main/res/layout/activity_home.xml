<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="apine.mentor.com.anasotak.Home">
    <include layout="@layout/to"
      android:id="@+id/toin"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/toin">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="#ff0000">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/mainA"
                android:id="@+id/button"
                android:layout_gravity="center"
                android:background="@drawable/wall5"
                android:textSize="@dimen/textBs"
                android:textStyle="bold|italic" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="#00ff00">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/TestL"
                android:id="@+id/button2"
                android:layout_gravity="center"
                android:textSize="@dimen/textBs"
                android:textStyle="bold|italic"
                android:background="@drawable/wall6"
                android:textColor="#ffffff" />

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
